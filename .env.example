# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Input/Output Paths
YAML_INPUT_PATH=./samples
YAML_OUTPUT_PATH=./samples  # Default: in-place enhancement (same as input)

# Legacy Markdown Generation (deprecated - use v1.x for markdown)
# MARKDOWN_OUTPUT_PATH=./test-output
# TEMPLATE_PATH=./templates/product-api.template.md

# Processing Configuration
MAX_ITERATIONS=3  # Max refinement iterations for YAML enhancement
COMPLETENESS_THRESHOLD=90  # For validation compatibility
TIMEOUT_MINUTES=10

# YAML Enhancement Configuration (v2.0+)
ENHANCEMENT_MODE=missing_only  # Options: missing_only, improve_all, specific_fields
ENHANCEMENT_FIELDS=info,tags,endpoints,parameters,schemas  # Which fields to enhance
QUALITY_THRESHOLD=85  # Minimum quality score (0-100) to accept enhancements
PRESERVE_EXISTING=true  # Don't overwrite existing descriptions

# GitHub Actions Configuration
PROCESS_CHANGED_ONLY=false